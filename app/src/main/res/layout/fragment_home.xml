<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3003A9F4"
    android:padding="16dp"
    android:fillViewport="true"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="48dp"
        android:paddingBottom="48dp">

        <!-- Subtitle -->
        <TextView
            android:id="@+id/homeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get accurate forecasts anytime, anywhere."
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Navigation Buttons -->
        <Button
            android:id="@+id/btnTodayForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Today's Forecast"
            android:textSize="24dp"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnFiveDayForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View 5-Day Forecast"
            android:textSize="24dp"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>